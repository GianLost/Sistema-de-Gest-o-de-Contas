<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemDeGerenciamentoDeContas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemDeGerenciamentoDeContas.styles.css" asp-append-version="true" />
    <!-- Importação do css do plug-in Datatable -->
    <link rel="stylesheet" type="text/css" href="~/lib/data-tables/css/dataTables.bootstrap5.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

            <div class="container">

                <a class="navbar-brand" asp-action="Index" asp-controller="Home">SGC - Sistema de Gerenciamento de Contas</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">Início</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="contasDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Fornecedores
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="contasDropdown">
                                <li><a class="dropdown-item" asp-action="Cadastro" asp-controller="Fornecedor">Cadastro de Fornecedores</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Fornecedor">Lista de Fornecedores</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="contasDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Contas
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="contasDropdown">
                                <li><a class="dropdown-item" asp-action="Cadastro" asp-controller="Contas">Adicionar Contas</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Contas">Lista de Contas</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="relatoriosDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Relatórios
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="relatoriosDropdown">
                                <li><a class="dropdown-item" asp-action="FiltrarContas" asp-controller="Relatorios">Filtragem de Contas</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-action="GerarRelatorio" asp-controller="Relatorios">Gerar Relatório</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer
        class="d-flex footer justify-content-center align-content-center text-center text-light bottom-0 w-100 bg-primary">
        <div class="container">
            <span class="p-3">&copy; 2023 SGC - SISTEMA DE GERENCIAMENTO DE CONTAS - TRÊS MARIAS - MG - 39205-000
            </span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Importação do JavaScript do plug-in Datatable -->
    <script src="~/lib/data-tables/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/data-tables/js/dataTables.bootstrap5.min.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
